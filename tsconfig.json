{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "target": "es6",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "module": "NodeNext",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "lib": ["esnext", "DOM"],
    "noUnusedParameters": true,
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
